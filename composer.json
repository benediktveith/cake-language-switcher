{
    "name": "scherersoftware/cake-language-switcher",
    "description": "LanguageSwitcher plugin for CakePHP",
    "license": "MIT",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.0.0",
        "cakephp/cakephp": ">=3.3.2 < 4.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "cakephp/cakephp-codesniffer": "2.1.*"
    },
    "autoload": {
        "psr-4": {
            "LanguageSwitcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LanguageSwitcher\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests"
    }
}
